{
  "executable": "SilveR",
  "splashscreen": {
    "imageFile": "/wwwroot/images/InVivoStatLogo.png"
  },
  "singleInstance": false,
  "build": {
    "appId": "com.electron.InVivoStat",
    "productName": "InVivoStat",
    "copyright": "Copyright 2023",
    "buildVersion": "4.9.0",
    "compression": "maximum",
    "directories": {
      "output": "../../../bin/Desktop"
    },
    "win": {
      "icon": "../../../build/icon.png",
      "extraResources": [
        {
          "from": "./bin",
          "to": "bin",
          "filter": [
            "**/*"
          ]
        },
        {
          "from": "../../../R",
          "to": "./bin/R",
          "filter": [
            "**/*"
          ]
        }
      ],
      "files": [
        {
          "from": "./ElectronHostHook/node_modules",
          "to": "ElectronHostHook/node_modules",
          "filter": [
            "**/*"
          ]
        },
        "**/*"
      ]
    },
    "linux": {
      "icon": "../../../build/256x256.png",
      "extraResources": [
        {
          "from": "./bin",
          "to": "bin",
          "filter": [
            "**/*"
          ]
        }
      ],
      "files": [
        {
          "from": "./ElectronHostHook/node_modules",
          "to": "ElectronHostHook/node_modules",
          "filter": [
            "**/*"
          ]
        },
        "**/*"
      ]
    },
    "mac": {
      "icon": "../../../build/icon.png",
      "hardenedRuntime": true,
      "entitlements": "../../../build/entitlements.mac.inherit.plist",
      "target": ["dmg", "zip"],

      "extraResources": [
        {
          "from": "./bin",
          "to": "bin",
          "filter": [
            "**/*"
          ]
        }
      ],
      "files": [
        {
          "from": "./ElectronHostHook/node_modules",
          "to": "ElectronHostHook/node_modules",
          "filter": [
            "**/*"
          ]
        },
        "**/*"
      ]
    }
  }
}